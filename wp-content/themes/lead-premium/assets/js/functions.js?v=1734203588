// Funções de cookie
function setCookie(name, value, days) {
  var expires = "";
  if (days) {
    var d = new Date();
    d.setTime(d.getTime() + (days * 24 * 60 * 60 * 1000));
    expires = "; expires=" + d.toUTCString();
  }
  document.cookie = name + "=" + (value || "") + expires + "; path=/";
}

function getCookie(name) {
  var nameEQ = name + "=";
  var ca = document.cookie.split(';');
  for (var i = 0; i < ca.length; i++) {
    var c = ca[i];
    while (c.charAt(0) == ' ') c = c.substring(1, c.length);
    if (c.indexOf(nameEQ) == 0)
      return c.substring(nameEQ.length, c.length);
  }
  return null;
}

// Ao clicar em OK
function onclickdisclaimer() {
  setCookie("accept-cookies", "1", 10950); // 30 anos
  sessionStorage.setItem("acceptedDisclaimer", "true");
  document.getElementById("bottom-disclaimer").innerHTML = "";
}

// Força remoção (opcional)
function onclickremovedisclaimer() {
  setCookie("accept-cookies", "0", 10950);
  document.cookie = "accept-cookies=; Path=/; Expires=Thu, 01 Jan 1970 00:00:01 GMT;";
  sessionStorage.removeItem("acceptedDisclaimer");
  document.getElementById("bottom-disclaimer").innerHTML = disclaimerHTML;
}

// Banner HTML
var privacy_policy = "./politica-de-privacidade/index.html";
var disclaimerHTML = `
  <div id="cookieinfo">
    <div onclick="onclickdisclaimer()" id="cookieinfo-close">OK</div>
    <div id="cookieinfo-text">
      Ao usar esse site, você aceita nossos termos de uso e política de privacidade,
      saiba mais <a href="${privacy_policy}" title="Política de privacidade" target="_blank" rel="noopener nofollow" style="color:white;font-weight:800">clicando aqui</a>.
    </div>
  </div>`;

// Exibição condicional
var cookie = getCookie("accept-cookies");
var sessionAccepted = sessionStorage.getItem("acceptedDisclaimer");

if ((!cookie || cookie == "0") && !sessionAccepted) {
  document.getElementById("bottom-disclaimer").innerHTML = disclaimerHTML;
}